<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/grid" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="72dp"
        android:onClick="checkXorO"
        android:tag="1"
        app:layout_constraintEnd_toStartOf="@+id/img2"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="72dp"
        android:tag="2"
        android:onClick="checkXorO"
        app:layout_constraintEnd_toStartOf="@+id/img3"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="16dp"
        android:tag="3"
        android:onClick="checkXorO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:tag="4"
        android:onClick="checkXorO"
        app:layout_constraintEnd_toStartOf="@+id/img5"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="72dp"
        android:tag="5"
        android:onClick="checkXorO"
        app:layout_constraintEnd_toStartOf="@+id/img6"
        app:layout_constraintTop_toBottomOf="@+id/img2" />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:tag="6"
        android:onClick="checkXorO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img3" />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="72dp"
        android:tag="7"
        android:onClick="checkXorO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img8"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img8"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="72dp"
        android:tag="8"
        android:onClick="checkXorO"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/img9"
        app:layout_constraintTop_toBottomOf="@+id/img5"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img9"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:tag="9"
        android:onClick="checkXorO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img6"
        app:layout_constraintVertical_bias="0.0" />






</androidx.constraintlayout.widget.ConstraintLayout>